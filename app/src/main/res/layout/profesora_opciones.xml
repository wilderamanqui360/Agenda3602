<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ff86d7e8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_time"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_email"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_shuffle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_video"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_switch_camera"/>

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff86d7e8"
        android:gravity="center_horizontal"
        android:padding="20dp">


        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:entries="@array/aulas"

            android:choiceMode="multipleChoice"
            android:divider="@color/material_blue_grey_900"></ListView>

        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:choiceMode="multipleChoice"
            android:layout_height="match_parent"
            android:entries="@array/alumnos"></ListView>

    </LinearLayout>


        <Button


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar entrada a Alumno 1"
           android:drawableRight="@drawable/ic_action_send_now"

            />

</LinearLayout>
